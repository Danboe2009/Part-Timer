<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <com.google.android.material.card.MaterialCardView
      style="@style/mcmRoundImage"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_part_object"
        android:background="#d1fbd8"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <TextView
          android:id="@+id/tv_part_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="8dp"
          android:layout_marginTop="8dp"
          android:text="Cold Air Intake"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"/>

      <TextView
          android:id="@+id/tv_install_date"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="10/10/2020"
          app:layout_constraintStart_toStartOf="@id/tv_part_name"
          app:layout_constraintTop_toBottomOf="@id/tv_part_name" />

      <TextView
          android:id="@+id/tv_install_mileage"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="94900"
          app:layout_constraintStart_toStartOf="@id/tv_part_name"
          app:layout_constraintTop_toBottomOf="@id/tv_install_date" />

      <TextView
          android:id="@+id/tv_days_since"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginEnd="8dp"
          android:text="100 days"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="@id/tv_part_name" />

      <View
          android:id="@+id/divider"
          android:layout_width="match_parent"
          android:layout_height="3dp"
          android:layout_marginTop="8dp"
          android:background="?android:attr/listDivider"
          app:layout_constraintTop_toBottomOf="@id/tv_install_mileage" />
    </androidx.constraintlayout.widget.ConstraintLayout>
  </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>